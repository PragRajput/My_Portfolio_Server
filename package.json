{
  "name": "portfolio-api",
  "version": "1.0.0",
  "description": "Backend API for portfolio contact form",
  "main": "dist/firebase.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "kill-port": "powershell \"Get-Process -Id (Get-NetTCPConnection -LocalPort 5000).OwningProcess | Stop-Process -Force\"",
    "deploy": "npm run build && firebase deploy --only functions"
  },
  "engines": {
    "node": "20"
  },
  "keywords": [
    "api",
    "express",
    "resend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "firebase-functions": "^6.6.0",
    "resend": "^6.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "firebase-tools": "^14.23.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
